/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
	font-family 'Georgia'
	background-color background-color
	color #444

.header
	font-family 'Quicksand'
	padding 10px 10px
	color #fff
	font-size 20px
	text-align center
	background-color main-color
	border-bottom 1px solid darken(main-color, 30%)
	text-shadow 0px -1px 0px darken(main-color, 30%)
	
	a
		padding-right 50px

.container
	width 600px
	margin 50px auto
	overflow hidden

.main-content
	float left
	width 800px

	p
		margin-bottom 20px

.login
	div
		padding 6px
	
	.label
		float left
		width 65px
		padding-right 10px

.error
	color #FF0000


p
	line-height 1.8

.footer
	width 500px
	margin 50px auto
	border-top 1px dotted #ccc
	padding-top 5px
	font-size 13px
	text-align center
  
  
